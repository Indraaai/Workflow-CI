name: diabetes_prediction_project

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      test_size: {type: float, default: 0.2}
      random_state: {type: int, default: 42}
      n_estimators: {type: int, default: 100}
      learning_rate: {type: float, default: 0.1}
      max_depth: {type: int, default: 3}
    command: "python modelling.py --test_size {test_size} --random_state {random_state} --n_estimators {n_estimators} --learning_rate {learning_rate} --max_depth {max_depth}"